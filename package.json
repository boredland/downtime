{
	"name": "dowwntime",
	"version": "1.0.11",
	"description": "",
	"type": "module",
	"scripts": {
		"dev": "NODE_DEBUG=downtime node --watch --watch-preserve-output --experimental-strip-types src/index.ts",
		"cli": "NODE_DEBUG=downtime node --watch --watch-preserve-output --experimental-strip-types src/cli.ts",
		"build": "tsdown",
		"knip": "knip",
		"lint": "run-s -l lint:*",
		"lint:types": "tsc",
		"lint:fix": "biome check --fix --no-errors-on-unmatched",
		"prepublishOnly": "npm run build"
	},
	"author": "Jonas Strassel <info@jonas-strassel.de>",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "2.3.6",
		"@scalar/json-magic": "0.8.1",
		"@scalar/openapi-parser": "0.23.2",
		"@slack/webhook": "7.0.6",
		"@types/node": "24.10.1",
		"commander": "14.0.2",
		"devalue": "5.5.0",
		"knip": "5.69.1",
		"lefthook": "2.0.4",
		"npm-run-all2": "8.0.4",
		"p-throttle": "8.1.0",
		"tsdown": "0.16.5",
		"typescript": "5.9.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"dist",
		"README.md"
	],
	"bin": "./dist/cli.mjs",
	"exports": {
		".": "./dist/index.mjs",
		"./package.json": "./package.json"
	},
	"types": "./dist/index.d.mts",
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"engines": {
		"node": ">=24"
	}
}
